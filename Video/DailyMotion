# you may distribute it under GPL v2 or newer.

name: DailyMotion
short: V:DailyMotion
uri: qr{dailymotion\.(com|pl)/(.*?/)?video/[a-z0-9]+}
slots: max
status: OK 2009-10-04

start:
	GET( $-{_uri} );

	! m{<title>(.*?)</title>};
	! m{<h1 class="dmco_title">(.*?)</h1>};
	my $name = de_ml( $1 );
	$name =~ s{/}{_}g;

	! m{"video", "(.*?)"};
	my @uris = map { /(.*)@@.*/; $1 } split /\|\|/, uri_unescape( $1 );
	my $best_uri = undef;
	my $best_size = 0;
	foreach my $uri ( @uris ) {
		$uri =~ m{/cdn/.*?-(\d+)x};
		next unless $1 > $best_size;
		$best_size = $1;
		$best_uri = $uri;
	}

	my $ext = "mp4";
	! $best_uri =~ m{/cdn/((.*?)-\d+x\d+)};
	$ext = "flv" if $2 eq "FLV";
	my $fname = $name . "." . $ext;
	INFO( name => $fname, quality => $1 );

	DOWNLOAD( $best_uri, fname => $fname );

# vim: filetype=perl:ts=4:sw=4
