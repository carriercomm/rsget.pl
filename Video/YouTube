name: YouTube
short: V:YouTube
web: "http://www.youtube.com/"
uri: qr{youtube\.com/watch\?v=.*}
slots: max
status: OK 2010-07-22

unify:
	s/#.*//;
	m{[\?&]v=([-_a-zA-Z0-9]+)(?:&.*?)?$};
	return "http://www.youtube.com/watch?v=$1" if $1;

pre:
	my @fmt = (
		[ 37, "mp4", "1080p" ],
		[ 22, "mp4", "720p" ],
		[ 35, "flv", "HQ" ],
		[ 18, "mp4", "LQ" ],
	);

	sub best_format
	{
		/"fmt_map"\s*:\s*"(.*?)"/ or m{&fmt_map=(\S+?)&}
			or return undef;
		my %fmts = map { m{(\d+)\\?/}; $1 => $_ } split ",", uri_unescape( $1 );

		foreach my $f ( @fmt ) {
			return $f
				if exists $fmts{ $f->[0] };
		}

		return undef;
	}

start:
	GET( $-{_uri} );

	ERROR( "file not found: $1" )
		if /<div\s[^>]+class="yt-alert-content">\s*(Th.*?)\s*</s;
	ERROR( "age verification required" )
		if $-{_referer} =~ m#/verify_age#;

	# try to find best format
	$-{fmt} = best_format();

	# format 18 is almost always hidden,
	# if the best format we found is 5 we check for 18 manually
	GOTO stage_got_format
		if $-{fmt};

	GET( "$-{_uri}&fmt=18" );

	$-{fmt} = best_format();

stage_got_format:
	! m{"video_id": "(.*?)"} or m{'VIDEO_ID': '(.*?)'};
	my $id = $1;

	! m{<meta name="title" content="(.*?)">};
	my $name = de_ml( de_ml( $1 ) );
	$name =~ s{/}{_}g;

	! /"t"\s*:\s*"(.*?)"/ or m{&t=(\S+?)&};
	my $t = $1;

	my $fmt = $-{fmt};
	my $fmtstr = $fmt ? "&fmt=$fmt->[0]" : "";
	$fmt ||= [ 5, "flv", "vLQ" ];

	my $fname = $name . "." . $fmt->[1];
	INFO( name => $fname, fmt => $fmt->[0], quality => $fmt->[2] );

	/"fmt_url_map": "(.*?)"/;
	my %uri = map /(\d+)\|(.*)/, split /,/, $1;
	my $uri = $uri{ $fmt->[0] };
	$uri =~ s#\\/#/#g;

	DOWNLOAD( uri_unescape( $uri ), fname => $fname );

# vim: filetype=perl:ts=4:sw=4
