start:
	GET( $-{_uri} );

	my @list;
	push @list, $1 while s/link: '(\d+-[0-9a-f]+)';//;

	ERROR("no links") unless @list;

	$-{list} = \@list;
	$-{outlist} = [];

stage_get_link:
	GET( "getlink",
		post => { link_id => shift @{$-{list}} },
		keep_referer => 1 );

	my $uri = decrypt( $_ );
	push @{$-{outlist}}, $uri;

	GOTO stage_get_link if @{$-{list}};

	LINK( @{$-{outlist}} );

