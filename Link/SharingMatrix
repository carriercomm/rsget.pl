name: SharingMatrix
short: L:SM
web: "http://sharingmatrix.com/"
tos: "http://sharingmatrix.com/user_agreement"
uri: qr{(?:www\d+\.)?sharingmatrix\.com/folder/\d+}
status: OK 2010-07-25

start:
	GET( $-{_uri} );

	LINK( /<td><a href="(.*?)">/g );

